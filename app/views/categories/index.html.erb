<h1 class="text-center mt-4">Categories</h1>
<div class="apple_pagination">
    <%= will_paginate @categories,:container=>false %>
</div>
<div class="container mb-4">
    <% @categories.each do |category|%>
        <div class="row justify-content-md-center">
            <div class="col-4 mt-4">
                <div class="card text-center shadow bg-white mb5 p3 rounded">
                <div class="card-body">
                    <h5 class="card-title"><%= link_to category.name,category_path(category),class:"text-success" %></h5>
                    <p class="card-text "><%= pluralize(category.articles.count,"article") %></p>
                </div>
                <div class="card-footer text-muted">
                    <small>Created about <%=time_ago_in_words(category.created_at)%> ago,edited about <%=time_ago_in_words(category.updated_at)%> ago</small>
                </div>
                </div> 
            </div>
        </div>
    <%end%>
</div>
<div class="apple_pagination">
    <%= will_paginate @categories,:container=>false %>
</div>

