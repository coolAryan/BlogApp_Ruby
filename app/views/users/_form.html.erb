<div class="container">
    <div class="row justify-content-center ">
        <div class="col-10">  
            <%= render 'shared/errors',obj: @user%>
            <%= form_with(model: @user,class:"shadow bg-info p-3 mb-3  ", local: true) do |f| %>

                <div class="form-group row mx-4 my-3">
                    <%= f.label :name,class:"col-2 col-form-label px-4 text-light" %>
                    <div class="col-10">
                        <%= f.text_field :name,class:"form-control shadow rounded",placeholder:"Enter Username"%>
                    </div>
                </div>

                <div class="form-group row mx-4 my-3">
                    <%= f.label :email,class:"col-2 col-form-label px-4 text-light" %>
                    <div class="col-10">
                        <%= f.email_field :email,class:"form-control shadow rounded",placeholder:"Enter Email Address"%>
                    </div>
                </div>

                <div class="form-group row mx-4 my-3">
                    <%= f.label :password,class:"col-2 col-form-label px-4 text-light" %>
                    <div class="col-10">
                        <%= f.password_field :password ,class:"form-control shadow rounded",placeholder:"Choose a Password"%>
                    </div>
                </div>

                <div class="justify-content-center form-group row">
                    <div class="btn btn-outline-light btn-lg"> 
                        <%= f.submit%>
                    </div>
                </div> 
            <%end%>
        </div>
    </div>
</div>